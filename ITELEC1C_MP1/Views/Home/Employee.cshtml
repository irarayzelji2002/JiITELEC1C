@{
	ViewData["Title"] = "Employee";
	//Person1 Details
	var FirstName = "Ira Rayzel";
	var LastName = "Ji";
	var Birthday = new DateTime(2002, 12, 26);
	var IsTenured = false;
	var SalaryPerHour = 80.00;
	var Email = "irarayzel.ji.cics@ust.edu.ph";

	//Person2 Details
	var FirstName2 = "Gabriel";
	var LastName2 = "Montano";
	var IsTenured2 = true;
	var SalaryPerHour2 = 80.00;
	var Email2 = "gdmontano@ust.edu.ph";

	//Getting Age
	var Today = DateTime.Today;
	var Now = int.Parse(DateTime.Now.ToString("yyyyMMdd"));
	var DOB = int.Parse(Birthday.ToString("yyyyMMdd"));
	var Age = (Now - DOB) / 10000;

	//Getting Domain and Username
	var Domain = Email.Substring(Email.LastIndexOf('@') + 1);
	var Username = Email.Substring(0, Email.IndexOf("@"));
	//string[] ExtractedEmail = Email.Split('.');
	//string Username = ExtractedEmail[0] + "." + ExtractedEmail[1]; //until first dot

	//Getting Status
	var Status = "";
	var Additional = 0;
	if(IsTenured == false) { Status = "Probationary"; }
	else { Status = "Permanent"; Additional = 500; }

	//Getting Daily and Monthly Salary
	var SalaryPerDay = SalaryPerHour * 8;
	var SalaryPerMonth = SalaryPerDay * 30;
	if (Status == "Permanent") { SalaryPerMonth += 500; }

	var Name2 = FirstName2 + " " + LastName2;
	var Status2 = "";
	var Additional2 = 0;
	if (IsTenured2 == false) { Status2 = "Probationary"; }
	else { Status2 = "Permanent"; Additional2 = 500; }
	var SalaryPerDay2 = SalaryPerHour2 * 8;
	var SalaryPerMonth2 = SalaryPerDay2 * 30;
	if (Status2 == "Permanent") { SalaryPerMonth2 += 500; }

	//Getting Grades
	var Name = FirstName + " " + LastName;
	var PrelimGrade = 92;
	var FinalGrade = 90;
	var SemGrade = (PrelimGrade+FinalGrade)/2;
	var TransmutedGrade = 0.00;
	if (SemGrade < 75) { TransmutedGrade = 5.00; }
	else if (SemGrade < 79) { TransmutedGrade = 3.00; }
	else if (SemGrade < 82) { TransmutedGrade = 2.75; }
	else if (SemGrade < 84) { TransmutedGrade = 2.50; }
	else if (SemGrade < 87) { TransmutedGrade = 2.25; }
	else if (SemGrade < 89) { TransmutedGrade = 2.00; }
	else if (SemGrade < 92) { TransmutedGrade = 1.75; }
	else if (SemGrade < 94) { TransmutedGrade = 1.50; }
	else if (SemGrade < 96) { TransmutedGrade = 1.25; }
	else if (SemGrade < 101) { TransmutedGrade = 1.00; }
}
<h1 class="text-center">@ViewData["Title"]</h1>
